@page "/AdminDashboard"
<PageTitle>AdminDashboard</PageTitle>

<div class="equipos-container">
    <!-- Encabezado -->
    <div style="
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        border-bottom: 2px solid #ccc;
        padding-bottom: 4px;
        flex-wrap: wrap;">
        <h4 style="
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            font-weight: 700;
            font-size: 1.5rem;
            line-height: 40px;
            margin: 0;
            padding: 0;
            color: #000;">
            Dashboard
        </h4>
        <img src="img/logoOutsourcing.png" alt="Logo" style="height: 40px; margin-top: 10px;" />
    </div>

    <!-- Contadores superiores dinámicos -->
    <div class="dashboard-counters" style="
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 20px;">

        <!-- Total Hoy -->
        <div style="
        flex: 1;
        background-color: #000;
        color: #fff;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);
        min-width: 220px;">
            <h4 id="totalHoy" style="margin: 0; font-size: 24px;">0</h4>
            <p>Transacciones Totales Hoy</p>
        </div>

        <!-- Transacciones Normales -->
        <div style="
        flex: 1;
        background-color: #E9002B;
        color: #fff;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);
        min-width: 220px;">
            <h4 id="totalNormales" style="margin: 0; font-size: 24px;">0</h4>
            <p>Transacciones Normales</p>
        </div>

        <!-- Transacciones Visitantes -->
        <div style="
        flex: 1;
        background-color: #008080;
        color: #fff;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);
        min-width: 220px;">
            <h4 id="totalVisitantes" style="margin: 0; font-size: 24px;">0</h4>
            <p>Transacciones Visitantes</p>
        </div>
    </div>

    <!-- Filtros superiores -->
    <div class="dashboard-filters" style="
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 20px;">
        <input type="text" placeholder="Asignado"
               style="flex: 1; min-width: 220px; padding: 10px; border: 1px solid #ccc; border-radius: 8px;">
        <input type="text" placeholder="Número de serie"
               style="flex: 1; min-width: 220px; padding: 10px; border: 1px solid #ccc; border-radius: 8px;">
        <select style="flex: 1; min-width: 220px; padding: 10px; border: 1px solid #ccc; border-radius: 8px;">
            <option value="">Todas las Alertas</option>
            <option value="alta">Prioridad alta</option>
            <option value="media">Prioridad media</option>
            <option value="baja">Prioridad baja</option>
        </select>
    </div>
    <!-- Contenedor horizontal de las dos tablas -->
    <div style="display: flex; gap: 20px; flex-wrap: wrap;">

        <!-- Tabla dinámica corporativos -->
        <div class="table-wrapper" style="flex: 1; border: 1px solid #E9002B; border-radius: 10px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5); overflow-x: auto; min-width: 600px;">
            <table id="tablaDashboard" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Código de Barras</th>
                        <th>Tipo Transacción</th>
                        <th>Guarda Aprobador</th>
                        <th>Sede OS</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <!-- Tabla dinámica visitantes -->
        <div class="table-wrapper" style="flex: 1; border: 1px solid #E9002B; border-radius: 10px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5); overflow-x: auto; min-width: 600px;">
            <table id="tablaVisitantes" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Nombre Visitante</th>
                        <th>Marca</th>
                        <th>Tipo Transacción</th>
                        <th>Guarda Aprobador</th>
                        <th>Sede</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </div>
</div>


@inject IJSRuntime JS

