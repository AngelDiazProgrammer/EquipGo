@page "/subestados"

<div class="equipos-container">
    <!-- Encabezado -->
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; border-bottom: 2px solid #ccc; padding-bottom: 4px;">
        <h4 style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-weight: 700; font-size: 1.5rem; line-height: 40px; margin: 0; padding: 0; color: #000;">Subestados</h4>
        <img src="img/logoOutsourcing.png" alt="Logo" style="height: 40px;" />
    </div>

    <!-- Contadores -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-4">
            <div class="bg-dark text-white rounded p-3 text-center shadow">
                <h4 class="mb-0">@subEstados?.Count()</h4>
                <p>Subestados Totales</p>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="bg-secondary text-white rounded p-3 text-center shadow">
                <h4 class="mb-0">0</h4>
                <p>Activos</p>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="text-white rounded p-3 text-center shadow" style="background-color: #E9002B;">
                <h4 class="mb-0">0</h4>
                <p>Inactivos</p>
            </div>
        </div>
    </div>

    <!-- Botón para añadir subestado -->
    <div class="mb-3 d-flex justify-content-end">
        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalCrearSubEstado">
            <i class="bi bi-plus-lg"></i> Añadir Subestado
        </button>
    </div>

    <!-- Modal para crear subestado -->
    <div class="modal fade" id="modalCrearSubEstado" tabindex="-1" aria-labelledby="modalCrearSubEstadoLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalCrearSubEstadoLabel">Registrar Subestado</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <form id="formCrearSubEstado">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="nombre" class="form-label">Nombre del Subestado</label>
                                <input type="text" class="form-control" id="nombre" name="nombre" required />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="guardarSubEstado()">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de subestados -->
    @if (subEstados == null)
    {
        <p>Cargando subestados...</p>
    }
    else if (!subEstados.Any())
    {
        <p>No hay subestados registrados.</p>
    }
    else
    {
        <div class="table-wrapper" style="border: 1px solid #E9002B; border-radius: 10px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre del Subestado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sub in subEstados)
                    {
                        <tr>
                            <td>@sub.Id</td>
                            <td>@sub.NombreSubEstado</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" onclick="editarSubEstado(@sub.Id)">✏️</button>
                                <button class="btn btn-sm btn-outline-danger" onclick="abrirModalEliminarSubEstado(@sub.Id)">🗑️</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Modal editar -->
        <div class="modal fade" id="modalEditarSubEstado" tabindex="-1" aria-labelledby="modalEditarSubEstadoLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalEditarSubEstadoLabel">Editar Subestado</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <form id="formEditarSubEstado">
                            <input type="hidden" id="editarId" />
                            <div class="mb-3">
                                <label for="editarNombreSubEstado" class="form-label">Nombre del Subestado</label>
                                <input type="text" class="form-control" id="editarNombreSubEstado" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary" onclick="guardarCambiosSubEstado()">Guardar Cambios</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal eliminar -->
        <div class="modal fade" id="modalEliminarSubEstado" tabindex="-1" aria-labelledby="modalEliminarSubEstadoLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalEliminarSubEstadoLabel">Confirmar eliminación</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        ¿Estás seguro de que deseas eliminar este subestado?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-danger" onclick="confirmarEliminarSubEstado()">Eliminar</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
