@page "/equipos"
@using Microsoft.AspNetCore.Authorization
@using OUT_OS_APP.EQUIPGO.DTO.DTOs.Equipo
@attribute [Authorize(Roles = "Admin")]

<link href="css/Dashboard/dashboard.css" rel="stylesheet" />

<div class="main-container">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h4 class="fw-bold text-dark mb-0">Equipos</h4>
        <img src="img/logoOutsourcing.png" alt="Logo" style="height: 40px;" />
    </div>

    <!-- Contadores superiores -->
    <div class="dashboard-counters" style="display: flex; gap: 20px; margin-bottom: 20px;">
        <div style="flex: 1; background-color: #000; color: #fff; border-radius: 12px; padding: 20px; text-align: center; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);">
            <h4 style="margin: 0; font-size: 24px;">150</h4>
            <p>Equipos Registrados</p>
        </div>
        <div style="flex: 1; background-color: #555; color: #fff; border-radius: 12px; padding: 20px; text-align: center; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);">
            <h4 style="margin: 0; font-size: 24px;">90</h4>
            <p>Equipos Personales</p>
        </div>
        <div style="flex: 1; background-color: #E9002B; color: #fff; border-radius: 12px; padding: 20px; text-align: center; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);">
            <h4 style="margin: 0; font-size: 24px;">20</h4>
            <p>Equipos Corporativos</p>
        </div>
    </div>

    <!-- Filtros superiores -->
    <div class="dashboard-filters" style="display: flex; gap: 20px; margin-bottom: 20px;">
        <input type="text" placeholder="Marca" style="flex: 1; padding: 10px; border: 1px solid #ccc; border-radius: 8px;" @bind="filtroMarca" />
        <input type="text" placeholder="Modelo" style="flex: 1; padding: 10px; border: 1px solid #ccc; border-radius: 8px;" @bind="filtroModelo" />
        <input type="text" placeholder="Serial" style="flex: 1; padding: 10px; border: 1px solid #ccc; border-radius: 8px;" @bind="filtroSerial" />
        <input type="text" placeholder="Estado" style="flex: 1; padding: 10px; border: 1px solid #ccc; border-radius: 8px;" @bind="filtroEstado" />
        <button class="btn btn-danger me-2" @onclick="Filtrar">Aplicar Filtros</button>
        <button class="btn btn-secondary" @onclick="LimpiarFiltros">Limpiar</button>
    </div>

    <!-- Tabla -->
    @if (equiposFiltrados == null)
    {
        <p>Cargando equipos...</p>
    }
    else if (!equiposFiltrados.Any())
    {
        <p>No hay equipos que coincidan con los filtros.</p>
    }
    else
    {
        <div class="table-wrapper" style="border: 1px solid #E9002B; border-radius: 10px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5); overflow-x: auto;">
            <table class="table">
                <thead>
                    <tr>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Serial</th>
                        <th>Asset</th>
                        <th>Asignado a</th>
                        <th>Estado</th>
                        <th>Personal</th>
                        <th>Sede</th>
                        <th>Tipo Dispositivo</th>
                        <th>Sistema Operativo</th>
                        <th>MAC Equipo</th>
                        <th>Versión Software</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var equipo in equiposFiltrados)
                    {
                        <tr>
                            <td>@equipo.Marca</td>
                            <td>@equipo.Modelo</td>
                            <td>@equipo.Serial</td>
                            <td>@equipo.CodigoBarras</td>
                            <td>@equipo.UsuarioNombreCompleto</td>
                            <td>@equipo.EstadoNombre</td>
                            <td>@equipo.EquipoPersonalNombre</td>
                            <td>@equipo.SedeNombre</td>
                            <td>@equipo.TipoDispositivoNombre</td>
                            <td>@equipo.SistemaOperativo</td>
                            <td>@equipo.MacEquipo</td>
                            <td>@equipo.VersionSoftware</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
