@page "/equipos"
@using OUT_OS_APP.EQUIPGO.DTO.DTOs.Equipo

<div class="frame-container">
    <!-- Encabezado -->
    <div class="dashboard-parent">
        <h4 class="dashboard-equipgo">Equipos</h4>
        <div class="logo-os">
            <img src="img/logoOutsourcing.png" alt="Logo" class="dashboard-vector-icon" />
        </div>
    </div>

    <!-- Contadores -->
    <div class="info">
        <div class="card-registros">
            <div class="datos">
                <span class="b">150</span>
                <span class="transacciones-de-hoy">Equipos Registrados</span>
            </div>
        </div>
        <div class="dashboard-card-registros">
            <div class="datos">
                <span class="b">90</span>
                <span class="transacciones-de-hoy">Equipos Personales</span>
            </div>
        </div>
        <div class="card-alerta">
            <div class="datos">
                <span class="b">20</span>
                <span class="transacciones-de-hoy">Equipos Corporativos</span>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="dashboard-filtros">
        <div class="dashboard-filtro">
            <div class="buscar-nombre">
                <label>Marca</label>
                <div class="frame-div">
                    <input type="text" class="placeholder" @bind="filtroMarca" placeholder="Filtrar por marca..." />
                </div>
            </div>
            <div class="buscar-nombre">
                <label>Modelo</label>
                <div class="frame-div">
                    <input type="text" class="placeholder" @bind="filtroModelo" placeholder="Filtrar por modelo..." />
                </div>
            </div>
            <div class="buscar-nombre">
                <label>Serial</label>
                <div class="frame-div">
                    <input type="text" class="placeholder" @bind="filtroSerial" placeholder="Filtrar por serial..." />
                </div>
            </div>
            <div class="buscar-nombre">
                <label>Estado</label>
                <div class="frame-div">
                    <input type="text" class="placeholder" @bind="filtroEstado" placeholder="Filtrar por estado..." />
                </div>
            </div>
        </div>
        <div class="botonera">
            <button class="botn3" @onclick="Filtrar">Aplicar Filtros</button>
            <button class="botn3" style="background-color: #E0E0E0; color:#292929;" @onclick="LimpiarFiltros">Limpiar</button>
        </div>
    </div>

    <!-- Botón para añadir equipo -->
    <div class="botonera">
        <button class="botn3" data-bs-toggle="modal" data-bs-target="#modalCrearEquipo" onclick="window.cargarSelects()">
            <i class="bi bi-plus-lg"></i> Añadir Equipo
        </button>
    </div>

    <!-- Modal Crear Equipo -->
    <div class="modal fade" id="modalCrearEquipo" tabindex="-1" aria-labelledby="modalCrearEquipoLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content frame-container">
                <div class="dashboard-parent">
                    <h5 class="dashboard-equipgo">Registrar Equipo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body contenido">
                    <form id="formCrearEquipo">
                        <div class="row g-3">
                            <!-- Columna izquierda -->
                            <div class="col-md-6">
                                <label>Marca</label>
                                <input type="text" class="frame-div placeholder" id="marca" name="marca" required />

                                <label>Modelo</label>
                                <input type="text" class="frame-div placeholder" id="modelo" name="modelo" required />

                                <label>Serial</label>
                                <input type="text" class="frame-div placeholder" id="serial" name="serial" />

                                <label>Código de Barras</label>
                                <input type="text" class="frame-div placeholder" id="codigoBarras" name="codigoBarras" />

                                <label>Ubicación</label>
                                <input type="text" class="frame-div placeholder" id="ubicacion" name="ubicacion" />

                                <label>Asignado a</label>
                                <label>Asignado a</label>
                                <select id="usuarioInfo" name="usuarioInfo" class="frame-div placeholder"
                                        @bind="UsuarioSeleccionado">
                                    <option value="">-- Selecciona un usuario --</option>
                                    @foreach (var usuario in UsuariosAD)
                                    {
                                        <option value="@usuario.Usuario">@usuario.NombreCompleto (@usuario.Correo)</option>
                                    }
                                </select>

                                <label>Estado</label>
                                <select class="frame-div placeholder" id="estado" name="estado"></select>
                            </div>

                            <!-- Columna derecha -->
                            <div class="col-md-6">
                                <label>Equipo Personal</label>
                                <select class="frame-div placeholder" id="equipoPersonal" name="equipoPersonal"></select>

                                <label>Sede</label>
                                <select class="frame-div placeholder" id="sede" name="sede"></select>

                                <label>Tipo de Dispositivo</label>
                                <select class="frame-div placeholder" id="tipoDispositivo" name="tipoDispositivo"></select>

                                <label>Proveedor</label>
                                <select class="frame-div placeholder" id="proveedor" name="proveedor"></select>

                                <label>Latitud</label>
                                <input type="number" step="any" class="frame-div placeholder" id="latitud" name="latitud" />

                                <label>Longitud</label>
                                <input type="number" step="any" class="frame-div placeholder" id="longitud" name="longitud" />

                                <label>Sistema Operativo</label>
                                <input type="text" class="frame-div placeholder" id="sistemaOperativo" name="sistemaOperativo" />

                                <label>MAC Equipo</label>
                                <input type="text" class="frame-div placeholder" id="macEquipo" name="macEquipo" />

                                <label>Versión Software</label>
                                <input type="text" class="frame-div placeholder" id="versionSoftware" name="versionSoftware" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="botonera">
                    <button class="botn3" style="background-color:#E0E0E0; color:#292929;" data-bs-dismiss="modal">Cancelar</button>
                    <button class="botn3" onclick="guardarEquipo()">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla -->
    @if (equiposFiltrados == null)
    {
        <p>Cargando equipos...</p>
    }
    else if (!equiposFiltrados.Any())
    {
        <p>No hay equipos que coincidan con los filtros.</p>
    }
    else
    {
        <div class="table-wrapper">
            <table id="tablaDashboard">
                <thead>
                    <tr>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Serial</th>
                        <th>Asset</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var equipo in EquiposPaginados)
                    {
                        <tr>
                            <td>@equipo.Marca</td>
                            <td>@equipo.Modelo</td>
                            <td>@equipo.Serial</td>
                            <td>@equipo.CodigoBarras</td>
                            <td>
                                <button class="btn btn-sm btn-outline-info" @onclick="@(() => MostrarDetallesEquipo(equipo.Id))">🔍</button>
                                <button class="btn btn-sm btn-outline-primary" onclick="editarEquipo(@equipo.Id)">✏️</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Modal Editar Equipo -->
        <div class="modal fade" id="modalEditarEquipo" tabindex="-1" aria-labelledby="modalEditarEquipoLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content frame-container">
                    <div class="dashboard-parent">
                        <h5 class="dashboard-equipgo">Editar Equipo</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body contenido">
                        <form id="formEditarEquipo">
                            <input type="hidden" id="editarId" />
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Marca</label>
                                    <input type="text" class="frame-div placeholder" id="editarMarca" />

                                    <label>Modelo</label>
                                    <input type="text" class="frame-div placeholder" id="editarModelo" />

                                    <label>Serial</label>
                                    <input type="text" class="frame-div placeholder" id="editarSerial" />

                                    <label>Código de Barras</label>
                                    <input type="text" class="frame-div placeholder" id="editarCodigoBarras" />

                                    <label>Ubicación</label>
                                    <input type="text" class="frame-div placeholder" id="editarUbicacion" />

                                    <label>Asignado a</label>
                                    <label>Asignado a</label>
                                    <select id="usuarioInfo" name="usuarioInfo" class="frame-div placeholder"
                                            @bind="UsuarioSeleccionado">
                                        @if (UsuariosAD == null)
                                        {
                                            <option disabled>Cargando usuarios del AD...</option>
                                        }
                                        else if (!UsuariosAD.Any())
                                        {
                                            <option disabled>No se encontraron usuarios en AD</option>
                                        }
                                        else
                                        {
                                            <option value="">-- Selecciona un usuario --</option>
                                            @foreach (var usuario in UsuariosAD)
                                            {
                                                <option value="@usuario.Usuario">@usuario.NombreCompleto (@usuario.Correo)</option>
                                            }
                                        }
                                    </select>


                                    <label>Estado</label>
                                    <select class="frame-div placeholder" id="editarEstado"></select>
                                </div>
                                <div class="col-md-6">
                                    <label>Equipo Personal</label>
                                    <select class="frame-div placeholder" id="editarEquipoPersonal"></select>

                                    <label>Sede</label>
                                    <select class="frame-div placeholder" id="editarSede"></select>

                                    <label>Tipo Dispositivo</label>
                                    <select class="frame-div placeholder" id="editarTipoDispositivo"></select>

                                    <label>Proveedor</label>
                                    <select class="frame-div placeholder" id="proveedor"></select>

                                    <label>Latitud</label>
                                    <input type="number" step="any" class="frame-div placeholder" id="editarLatitud" />

                                    <label>Longitud</label>
                                    <input type="number" step="any" class="frame-div placeholder" id="editarLongitud" />

                                    <label>Sistema Operativo</label>
                                    <input type="text" class="frame-div placeholder" id="editarSistemaOperativo" />

                                    <label>MAC Equipo</label>
                                    <input type="text" class="frame-div placeholder" id="editarMacEquipo" />

                                    <label>Versión Software</label>
                                    <input type="text" class="frame-div placeholder" id="editarVersionSoftware" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="botonera">
                        <button class="botn3" style="background-color:#E0E0E0; color:#292929;" data-bs-dismiss="modal">Cancelar</button>
                        <button class="botn3" onclick="guardarCambiosEquipo()">Guardar Cambios</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Detalles Equipo -->
        <div class="modal fade" id="modalDetallesEquipo" tabindex="-1" aria-labelledby="modalDetallesEquipoLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content frame-container">
                    <div class="dashboard-parent">
                        <h5 class="dashboard-equipgo">Detalles del Equipo</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body contenido">
                        @if (equipoSeleccionado != null)
                        {
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <p><strong>Marca:</strong> @equipoSeleccionado.Marca</p>
                                    <p><strong>Modelo:</strong> @equipoSeleccionado.Modelo</p>
                                    <p><strong>Serial:</strong> @equipoSeleccionado.Serial</p>
                                    <p><strong>Código de Barras:</strong> @equipoSeleccionado.CodigoBarras</p>
                                    <p><strong>Tipo de equipo:</strong> @equipoSeleccionado.EquipoPersonalNombre</p>
                                    <p><strong>Tipo de dispositivo:</strong> @equipoSeleccionado.TipoDispositivoNombre</p>
                                    <p><strong>Proveedor:</strong> @equipoSeleccionado.ProveedorNombre</p>
                                    <p><strong>Estado:</strong> @equipoSeleccionado.EstadoNombre</p>
                                    <p><strong>Usuario:</strong> @equipoSeleccionado.UsuarioNombreCompleto</p>
                                    <p><strong>Ubicación:</strong> @equipoSeleccionado.Ubicacion</p>
                                    <p><strong>Sistema Operativo:</strong> @equipoSeleccionado.SistemaOperativo</p>
                                </div>
                                <div class="col-md-6">
                                    <div id="google-map" style="height: 300px; width: 100%; background-color: lightgray;"></div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p class="text-danger">No se pudo cargar la información del equipo.</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Paginación -->
        <div class="botonera">
            <button class="botn3" style="background-color:#E0E0E0; color:#292929;" @onclick="AnteriorPagina" disabled="@(paginaActual == 1)">Anterior</button>
            <span>Página @paginaActual de @TotalPaginas</span>
            <button class="botn3" style="background-color:#E0E0E0; color:#292929;" @onclick="SiguientePagina" disabled="@(paginaActual == TotalPaginas)">Siguiente</button>
        </div>
    }
</div>
