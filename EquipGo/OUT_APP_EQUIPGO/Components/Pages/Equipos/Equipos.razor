@page "/equipos"
@using OUT_OS_APP.EQUIPGO.DTO.DTOs.Equipo

<div class="frame-container">
    <!-- Encabezado -->
    <div class="dashboard-parent">
        <h4 class="dashboard-equipgo">Equipos</h4>
        <div class="logo-os">
            <img src="img/logoOutsourcing.png" alt="Logo" class="dashboard-vector-icon" />
        </div>
    </div>

    <!-- Contadores -->
    <div class="info">
        <div class="card-registros">
            <div class="datos">
                <span class="b">150</span>
                <span class="transacciones-de-hoy">Equipos Registrados</span>
            </div>
        </div>
        <div class="dashboard-card-registros">
            <div class="datos">
                <span class="b">90</span>
                <span class="transacciones-de-hoy">Equipos Personales</span>
            </div>
        </div>
        <div class="card-alerta">
            <div class="datos">
                <span class="b">20</span>
                <span class="transacciones-de-hoy">Equipos Corporativos</span>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="dashboard-filtros">
        <div class="dashboard-filtro">
            <div class="buscar-nombre">
                <label>Marca</label>
                <div class="frame-div">
                    <input type="text" class="placeholder" @bind="filtroMarca" placeholder="Filtrar por marca..." />
                </div>
            </div>
            <div class="buscar-nombre">
                <label>Modelo</label>
                <div class="frame-div">
                    <input type="text" class="placeholder" @bind="filtroModelo" placeholder="Filtrar por modelo..." />
                </div>
            </div>
            <div class="buscar-nombre">
                <label>Serial</label>
                <div class="frame-div">
                    <input type="text" class="placeholder" @bind="filtroSerial" placeholder="Filtrar por serial..." />
                </div>
            </div>
            <div class="buscar-nombre">
                <label>Estado</label>
                <div class="frame-div">
                    <input type="text" class="placeholder" @bind="filtroEstado" placeholder="Filtrar por estado..." />
                </div>
            </div>
        </div>
        <div class="botonera">
            <button class="botn3" @onclick="Filtrar">Aplicar Filtros</button>
            <button class="botn3" style="background-color: #E0E0E0; color:#292929;" @onclick="LimpiarFiltros">Limpiar</button>
        </div>
    </div>

    <!-- Botón para añadir equipo -->
    <div class="botonera">
        <button class="botn3" data-bs-toggle="modal" data-bs-target="#modalCrearEquipo" onclick="window.cargarSelects()">
            <i class="bi bi-plus-lg"></i> Añadir Equipo
        </button>
    </div>

    <!-- Modal Crear Equipo REDISEÑADO -->
    <div class="modal fade modal-equipgo" id="modalCrearEquipo" tabindex="-1" aria-labelledby="modalCrearEquipoLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header-equipgo">
                    <h5 class="modal-title-equipgo">Registrar Equipo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body-equipgo">
                    <form id="formCrearEquipo">
                        <div class="row">
                            <!-- Columna izquierda -->
                            <div class="col-md-6">
                                <div class="seccion-modal">
                                    <div class="seccion-header">
                                        <span class="seccion-titulo">💻 Datos del Equipo</span>
                                    </div>
                                    <div class="seccion-datos">
                                        <div class="form-section">
                                            <label>Marca</label>
                                            <input type="text" id="marca" name="marca" required placeholder="Ej: Dell" />
                                        </div>
                                        <div class="form-section">
                                            <label>Modelo</label>
                                            <input type="text" id="modelo" name="modelo" required placeholder="Ej: Latitude 5510" />
                                        </div>
                                        <div class="form-section">
                                            <label>Serial</label>
                                            <input type="text" id="serial" name="serial" placeholder="Ej: ABC123" />
                                        </div>
                                        <div class="form-section">
                                            <label>Código de Barras</label>
                                            <input type="text" id="codigoBarras" name="codigoBarras" placeholder="Ej: CB001" />
                                        </div>
                                        <div class="form-section">
                                            <label>Sistema Operativo</label>
                                            <input type="text" id="sistemaOperativo" name="sistemaOperativo" placeholder="Ej: Windows 11" />
                                        </div>
                                        <div class="form-section">
                                            <label>MAC Equipo</label>
                                            <input type="text" id="macEquipo" name="macEquipo" placeholder="Ej: 00:1B:44:11:3A:B7" />
                                        </div>
                                        <div class="form-section">
                                            <label>Versión Software</label>
                                            <input type="text" id="versionSoftware" name="versionSoftware" placeholder="Ej: v1.0.0" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Columna derecha -->
                            <div class="col-md-6">
                                <div class="seccion-modal">
                                    <div class="seccion-header">
                                        <span class="seccion-titulo">⚙️ Características</span>
                                    </div>
                                    <div class="seccion-datos">
                                        <div class="form-section">
                                            <label>Equipo Personal</label>
                                            <select id="equipoPersonal" name="equipoPersonal">
                                                <option value="">Seleccionar...</option>
                                            </select>
                                        </div>
                                        <div class="form-section">
                                            <label>Tipo de Dispositivo</label>
                                            <select id="tipoDispositivo" name="tipoDispositivo">
                                                <option value="">Seleccionar...</option>
                                            </select>
                                        </div>
                                        <div class="form-section">
                                            <label>Estado</label>
                                            <select id="estado" name="estado">
                                                <option value="">Seleccionar...</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="seccion-modal">
                                    <div class="seccion-header">
                                        <span class="seccion-titulo">📍 Asignación</span>
                                    </div>
                                    <div class="seccion-datos">
                                        <div class="form-section">
                                            <label>Proveedor</label>
                                            <select id="proveedor" name="proveedor">
                                                <option value="">Seleccionar...</option>
                                            </select>
                                        </div>
                                        <div class="form-section">
                                            <label>Sede</label>
                                            <select id="sede" name="sede">
                                                <option value="">Seleccionar...</option>
                                            </select>
                                        </div>
                                        <div class="form-section">
                                            <label>Asignado a</label>
                                            <select id="usuarioInfo" name="usuarioInfo" @bind="UsuarioSeleccionado">
                                                <option value="">-- Selecciona un usuario --</option>
                                                @foreach (var usuario in UsuariosAD)
                                                {
                                                    <option value="@usuario.Usuario">@usuario.NombreCompleto (@usuario.Correo)</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="form-section">
                                            <label>Ubicación</label>
                                            <input type="text" id="ubicacion" name="ubicacion" placeholder="Ej: Oficina 1" />
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-section">
                                                    <label>Latitud</label>
                                                    <input type="number" step="any" id="latitud" name="latitud" placeholder="0.000000" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-section">
                                                    <label>Longitud</label>
                                                    <input type="number" step="any" id="longitud" name="longitud" placeholder="0.000000" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer-equipgo">
                    <button class="boton-modal-equipgo boton-modal-secundario" data-bs-dismiss="modal">Cancelar</button>
                    <button class="boton-modal-equipgo" onclick="guardarEquipo()">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla con animación de carga -->
    <div style="position: relative; width: 100%;">
        @if (isCargandoEquipos)
        {
            <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; display: flex; flex-direction: column; align-items: center; justify-content: center; z-index: 50; pointer-events: none;">
                <div style="position: relative; width: 56px; height: 56px;">
                    <div style="width: 56px; height: 56px; border: 4px solid #ef4444; border-top-color: transparent; border-radius: 50%; animation: spin-slow 1.4s linear infinite;"></div>
                </div>
                <p style="margin-top: 12px; color: #ef4444; font-size: 18px; font-weight: 600; letter-spacing: 0.025em; animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;">
                    Cargando equipos...
                </p>
            </div>

            <style>
                @@keyframes spin-slow {
                    0% {
                        transform: rotate(0deg);
                    }

                    100% {
                        transform: rotate(360deg);
                    }
                }

                @@keyframes pulse {
                    0%, 100% {
                        opacity: 1;
                    }

                    50% {
                        opacity: 0.5;
                    }
                }
            </style>
        }

        @if (equiposFiltrados == null)
        {
            <p>Cargando equipos...</p>
        }
        else if (equiposFiltrados.Any())
        {
            <div class="table-wrapper" style="width: 100%;">
                <table id="tablaDashboard" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Marca</th>
                            <th>Modelo</th>
                            <th>Serial</th>
                            <th>Asset</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var equipo in EquiposPaginados)
                        {
                            <tr>
                                <td>@equipo.Marca</td>
                                <td>@equipo.Modelo</td>
                                <td>@equipo.Serial</td>
                                <td>@equipo.CodigoBarras</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-info" @onclick="@(() => MostrarDetallesEquipo(equipo.Id))">🔍</button>
                                    <button class="btn btn-sm btn-outline-primary" onclick="editarEquipo(@equipo.Id)">✏️</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginación -->
            <div class="botonera">
                <button class="botn3" style="background-color:#E0E0E0; color:#292929;" @onclick="AnteriorPagina" disabled="@(paginaActual == 1)">Anterior</button>
                <span>Página @paginaActual de @TotalPaginas</span>
                <button class="botn3" style="background-color:#E0E0E0; color:#292929;" @onclick="SiguientePagina" disabled="@(paginaActual == TotalPaginas)">Siguiente</button>
            </div>
        }
    </div>

    <!-- Modal Editar Equipo REDISEÑADO -->
    <div class="modal fade modal-equipgo" id="modalEditarEquipo" tabindex="-1" aria-labelledby="modalEditarEquipoLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header-equipgo">
                    <h5 class="modal-title-equipgo">Editar Equipo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body-equipgo">
                    <form id="formEditarEquipo">
                        <input type="hidden" id="editarId" />
                        <div class="row">
                            <!-- Columna izquierda -->
                            <div class="col-md-6">
                                <div class="seccion-modal">
                                    <div class="seccion-header">
                                        <span class="seccion-titulo">💻 Datos del Equipo</span>
                                    </div>
                                    <div class="seccion-datos">
                                        <div class="form-section">
                                            <label>Marca</label>
                                            <input type="text" id="editarMarca" />
                                        </div>
                                        <div class="form-section">
                                            <label>Modelo</label>
                                            <input type="text" id="editarModelo" />
                                        </div>
                                        <div class="form-section">
                                            <label>Serial</label>
                                            <input type="text" id="editarSerial" />
                                        </div>
                                        <div class="form-section">
                                            <label>Código de Barras</label>
                                            <input type="text" id="editarCodigoBarras" />
                                        </div>
                                        <div class="form-section">
                                            <label>Sistema Operativo</label>
                                            <input type="text" id="editarSistemaOperativo" />
                                        </div>
                                        <div class="form-section">
                                            <label>MAC Equipo</label>
                                            <input type="text" id="editarMacEquipo" />
                                        </div>
                                        <div class="form-section">
                                            <label>Versión Software</label>
                                            <input type="text" id="editarVersionSoftware" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Columna derecha -->
                            <div class="col-md-6">
                                <div class="seccion-modal">
                                    <div class="seccion-header">
                                        <span class="seccion-titulo">⚙️ Características</span>
                                    </div>
                                    <div class="seccion-datos">
                                        <div class="form-section">
                                            <label>Equipo Personal</label>
                                            <select id="editarEquipoPersonal"></select>
                                        </div>
                                        <div class="form-section">
                                            <label>Tipo Dispositivo</label>
                                            <select id="editarTipoDispositivo"></select>
                                        </div>
                                        <div class="form-section">
                                            <label>Estado</label>
                                            <select id="editarEstado"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="seccion-modal">
                                    <div class="seccion-header">
                                        <span class="seccion-titulo">📍 Asignación</span>
                                    </div>
                                    <div class="seccion-datos">
                                        <div class="form-section">
                                            <label>Proveedor</label>
                                            <select id="editarProveedor"></select>
                                        </div>
                                        <div class="form-section">
                                            <label>Sede</label>
                                            <select id="editarSede"></select>
                                        </div>
                                        <div class="form-section">
                                            <label>Asignado a</label>
                                            <select id="editarUsuarioInfo" @bind="UsuarioSeleccionado">
                                                @if (UsuariosAD == null)
                                                {
                                                    <option disabled>Cargando usuarios del AD...</option>
                                                }
                                                else if (!UsuariosAD.Any())
                                                {
                                                    <option disabled>No se encontraron usuarios en AD</option>
                                                }
                                                else
                                                {
                                                    <option value="">-- Selecciona un usuario --</option>
                                                    @foreach (var usuario in UsuariosAD)
                                                    {
                                                        <option value="@usuario.Usuario">@usuario.NombreCompleto (@usuario.Correo)</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="form-section">
                                            <label>Ubicación</label>
                                            <input type="text" id="editarUbicacion" />
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-section">
                                                    <label>Latitud</label>
                                                    <input type="number" step="any" id="editarLatitud" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-section">
                                                    <label>Longitud</label>
                                                    <input type="number" step="any" id="editarLongitud" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer-equipgo">
                    <button class="boton-modal-equipgo boton-modal-secundario" data-bs-dismiss="modal">Cancelar</button>
                    <button class="boton-modal-equipgo" onclick="guardarCambiosEquipo()">Guardar Cambios</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Detalles Equipo REDISEÑADO -->
    <div class="modal fade modal-equipgo" id="modalDetallesEquipo" tabindex="-1" aria-labelledby="modalDetallesEquipoLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header-equipgo">
                    <h5 class="modal-title-equipgo">Detalles del Equipo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body-equipgo">
                    @if (equipoSeleccionado != null)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <!-- Datos del Equipo -->
                                <div class="seccion-modal">
                                    <div class="seccion-header">
                                        <span class="seccion-titulo">💻 Datos del Equipo</span>
                                    </div>
                                    <div class="seccion-datos">
                                        <div class="dato-fila">
                                            <span class="dato-label">Marca:</span>
                                            <span class="dato-valor">@equipoSeleccionado.Marca</span>
                                        </div>
                                        <div class="dato-fila">
                                            <span class="dato-label">Modelo:</span>
                                            <span class="dato-valor">@equipoSeleccionado.Modelo</span>
                                        </div>
                                        <div class="dato-fila">
                                            <span class="dato-label">Serial:</span>
                                            <span class="dato-valor">@equipoSeleccionado.Serial</span>
                                        </div>
                                        <div class="dato-fila">
                                            <span class="dato-label">Código de Barras:</span>
                                            <span class="dato-valor">@equipoSeleccionado.CodigoBarras</span>
                                        </div>
                                        <div class="dato-fila">
                                            <span class="dato-label">Sistema Operativo:</span>
                                            <span class="dato-valor">@equipoSeleccionado.SistemaOperativo</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Características -->
                                <div class="seccion-modal">
                                    <div class="seccion-header">
                                        <span class="seccion-titulo">⚙️ Características</span>
                                    </div>
                                    <div class="seccion-datos">
                                        <div class="dato-fila">
                                            <span class="dato-label">Tipo de equipo:</span>
                                            <span class="dato-valor">@equipoSeleccionado.EquipoPersonalNombre</span>
                                        </div>
                                        <div class="dato-fila">
                                            <span class="dato-label">Tipo de dispositivo:</span>
                                            <span class="dato-valor">@equipoSeleccionado.TipoDispositivoNombre</span>
                                        </div>
                                        <div class="dato-fila">
                                            <span class="dato-label">Estado:</span>
                                            <span class="dato-valor">@equipoSeleccionado.EstadoNombre</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Asignación -->
                                <div class="seccion-modal">
                                    <div class="seccion-header">
                                        <span class="seccion-titulo">📍 Asignación</span>
                                    </div>
                                    <div class="seccion-datos">
                                        <div class="dato-fila">
                                            <span class="dato-label">Proveedor:</span>
                                            <span class="dato-valor">@equipoSeleccionado.ProveedorNombre</span>
                                        </div>
                                        <div class="dato-fila">
                                            <span class="dato-label">Usuario:</span>
                                            <span class="dato-valor">@equipoSeleccionado.UsuarioNombreCompleto</span>
                                        </div>
                                        <div class="dato-fila">
                                            <span class="dato-label">Ubicación:</span>
                                            <span class="dato-valor">@equipoSeleccionado.Ubicacion</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mapa-container">
                                    <div id="google-map" style="height: 500px; width: 100%; background-color: lightgray;"></div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-danger">No se pudo cargar la información del equipo.</p>
                    }
                </div>
                <div class="modal-footer-equipgo">
                    <button class="boton-modal-equipgo" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>