@page "/equipos"
@using OUT_OS_APP.EQUIPGO.DTO.DTOs.Equipo
@using OUT_APP_EQUIPGO.Components.Shared
<div class="frame-container">
    <!-- Encabezado -->
    <div class="dashboard-parent">
        <h4 class="dashboard-equipgo">Administrar Equipos</h4>
        <div class="logo-os">
            <img src="img/logoOutsourcing.png" alt="Logo" class="dashboard-vector-icon" />
        </div>
    </div>

    <!-- Contadores -->
    <div class="info">
        <div class="card-registros">
            <div class="datos">
                <span class="b">@EquiposRegistradosFiltrados</span>
                <span class="transacciones-de-hoy">Equipos Registrados</span>
            </div>
        </div>
        <div class="dashboard-card-registros">
            <div class="datos">
                <span class="b">@EquiposActivosFiltrados</span>
                <span class="transacciones-de-hoy">Equipos Activos</span>
            </div>
        </div>
        <div class="card-alerta">
            <div class="datos">
                <span class="b">@EquiposInactivosFiltrados</span>
                <span class="transacciones-de-hoy">Equipos Inactivos</span>
            </div>
        </div>
    </div>

    <!-- CONTENIDO PRINCIPAL (ESTRUCTURA IDÉNTICA A USUARIOS) -->
    <div class="contenido">

        <!-- FILTROS (DENTRO DEL CONTENIDO) -->
        <div class="dashboard-filtros">
            <div class="dashboard-filtro">
                <div class="buscar-nombre">
                    <label>Marca</label>
                    <div class="frame-div">
                        <input type="text"
                               class="placeholder"
                               @bind="filtroMarca"
                               @oninput="OnFiltroMarcaChanged"
                               placeholder="Filtrar por marca..." />
                    </div>
                </div>
                <div class="buscar-nombre">
                    <label>Modelo</label>
                    <div class="frame-div">
                        <input type="text"
                               class="placeholder"
                               @bind="filtroModelo"
                               @oninput="OnFiltroModeloChanged"
                               placeholder="Filtrar por modelo..." />
                    </div>
                </div>
                <div class="buscar-nombre">
                    <label>Serial</label>
                    <div class="frame-div">
                        <input type="text"
                               class="placeholder"
                               @bind="filtroSerial"
                               @oninput="OnFiltroSerialChanged"
                               placeholder="Filtrar por serial..." />
                    </div>
                </div>
                <div class="buscar-nombre">
                    <label>Asset</label>
                    <div class="frame-div">
                        <input type="text"
                               class="placeholder"
                               @bind="filtroAsset"
                               @oninput="OnFiltroCodigoDeBarrasChanged"
                               placeholder="Filtrar por estado..." />
                    </div>
                </div>
                <div class="buscar-nombre">
                    <label>Usuario Asignado</label>
                    <div class="frame-div">
                        <input type="text"
                               class="placeholder"
                               @bind="filtroUsuario"
                               @oninput="OnFiltroUsuarioChanged"
                               placeholder="Filtrar por usuario..." />
                    </div>
                </div>
            </div>
        </div>

        <!-- Botón para añadir equipo -->
        <div class="botonera">
            <button class="botn3" data-bs-toggle="modal" data-bs-target="#modalCrearEquipo" onclick="limpiarFormularioCrear()">
                 Añadir Equipo
            </button>
            <button class="botn3" data-bs-toggle="modal" data-bs-target="#modalCargaMasiva">
                 Carga Masiva
            </button>
        </div>

        <!-- Tabla con animación de carga -->
            @if (isCargandoEquipos)
            {
                <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; display: flex; flex-direction: column; align-items: center; justify-content: center; z-index: 50; pointer-events: none;">
                    <div style="position: relative; width: 56px; height: 56px;">
                        <div style="width: 56px; height: 56px; border: 4px solid #ef4444; border-top-color: transparent; border-radius: 50%; animation: spin-slow 1.4s linear infinite;"></div>
                    </div>
                    <p style="margin-top: 12px; color: #ef4444; font-size: 18px; font-weight: 600; letter-spacing: 0.025em; animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;">
                        Cargando equipos...
                    </p>
                </div>

                <style>
                    @@keyframes spin-slow {
                        0% {
                            transform: rotate(0deg);
                        }

                        100% {
                            transform: rotate(360deg);
                        }
                    }

                    @@keyframes pulse {
                        0%, 100% {
                            opacity: 1;
                        }

                        50% {
                            opacity: 0.5;
                        }
                    }
                </style>
            }

        @if (equiposPaginados == null)
            {
                <p>Cargando equipos...</p>
            }
            else if (equiposPaginados.Any())
            {
                <!-- TABLA CON PAGINACIÓN AUTOMÁTICA -->
                <div class="table-wrapper">
                    <table class="table-equipgo">
                        <thead>
                            <tr>
                                <th>Marca</th>
                                <th>Modelo</th>
                                <th>Serial</th>
                                <th>Asset</th>
                                <th>Usuario Asignado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var equipo in equiposPaginados)
                            {
                                <tr>
                                    <td>@equipo.Marca</td>
                                    <td>@equipo.Modelo</td>
                                    <td>@equipo.Serial</td>
                                    <td>@equipo.CodigoBarras</td>
                                    <td>@if(!string.IsNullOrEmpty(equipo.UsuarioNombreCompleto)){
                                        <span>@equipo.UsuarioNombreCompleto</span>  
                                    }
                                    else
                                    {
                                        <span>Sin asignar</span>
                                    }
                                </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-info"
                                                onclick="abrirDetallesEquipo(@equipo.Id, '@equipo.Marca', '@equipo.Modelo')">
                                            🔍
                                        </button>
                                        <button class="btn btn-sm btn-outline-success" onclick="abrirModalAsignarUsuario(@equipo.Id)">👤</button>
                                        <button class="btn btn-sm btn-outline-primary" onclick="editarEquipo(@equipo.Id)">✏️</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- COMPONENTE DE PAGINACIÓN BLAZOR -->
            <Paginacion 
                TotalRegistros="@equiposFiltrados.Count"
                PaginaActual="@paginaActual" 
                PaginaActualChanged="@OnPaginaCambiada"
                RegistrosPorPagina="@registrosPorPagina"
                RegistrosPorPaginaChanged="@OnRegistrosPorPaginaCambiados"
                ModoAuto="@modoAuto"
                ModoAutoChanged="@OnModoAutoCambiado" />
            }
            else
            {
                <p>No hay equipos que coincidan con los filtros.</p>
            }
    </div> <!-- CIERRE DEL CONTENIDO PRINCIPAL -->
    <!-- Modal Carga Masiva -->
    <div class="modal fade modal-equipgo" id="modalCargaMasiva" tabindex="-1" aria-labelledby="modalCargaMasivaLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header-equipgo">
                    <h5 class="modal-title-equipgo">Carga Masiva de Equipos</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body-equipgo">
                    <!-- Instrucciones -->
                    <div class="seccion-modal">
                        <div class="seccion-header">
                            <span class="seccion-titulo">📋 Instrucciones</span>
                        </div>
                        <div class="seccion-datos">
                            <div class="alert alert-info">
                                <strong>Pasos para la carga masiva:</strong>
                                <ol class="mb-0 mt-2">
                                    <li>Descarga la plantilla Excel</li>
                                    <li>Llena los datos de los equipos</li>
                                    <li>Sube el archivo completado</li>
                                    <li>Revisa los resultados</li>
                                </ol>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Columna izquierda: Plantilla e información -->
                        <div class="col-md-6">
                            <!-- Plantilla -->
                            <div class="seccion-modal">
                                <div class="seccion-header">
                                    <span class="seccion-titulo">📄 Plantilla</span>
                                </div>
                                <div class="seccion-datos">
                                    <p>Descarga la plantilla Excel para cargar los equipos de forma masiva, llena los datos y guarda el archivo.</p>
                                    <button class="botn3" onclick="descargarPlantillaCargaMasiva()">
                                        <i class="bi bi-download"></i> Descargar Plantilla Excel
                                    </button>

                                    <div class="card mt-3">
                                        <div class="card-body">
                                            <h6 class="card-title">Columnas requeridas:</h6>
                                            <ul class="small mb-0">
                                                <li><strong>Marca</strong> (Obligatorio)</li>
                                                <li><strong>Modelo</strong> (Obligatorio)</li>
                                                <li><strong>Serial</strong> (Obligatorio)</li>
                                                <li><strong>CódigoBarras</strong> (Obligatorio)</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Columna derecha: Subir archivo -->
                        <div class="col-md-6">
                            <!-- Subir archivo -->
                            <div class="seccion-modal">
                                <div class="seccion-header">
                                    <span class="seccion-titulo">📤 Subir Archivo</span>
                                </div>
                                <div class="seccion-datos">
                                    <p>Sube el archivo completado y luego revisa los resultados.</p>

                                    <div class="mb-3">
                                        <label for="fileCargaMasiva" class="form-label fw-bold">Seleccionar archivo Excel:</label>
                                        <input type="file" id="fileCargaMasiva" class="form-control" accept=".xlsx, .xls" />
                                    </div>

                                    <!-- Información del archivo -->
                                    <div id="infoArchivo" class="alert alert-light" style="display: none;">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="bi bi-file-earmark-excel text-success"></i>
                                                <span id="nombreArchivo" class="fw-bold"></span>
                                                <span id="cantidadEquipos" class="badge bg-primary ms-2"></span>
                                            </div>
                                            <button type="button" class="btn-close" onclick="limpiarArchivo()"></button>
                                        </div>
                                    </div>

                                    <small class="text-muted">
                                        <i class="bi bi-info-circle"></i> Formatos soportados: Excel (.xlsx, .xls). Tamaño máximo: 10MB
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Resultados (ocupa todo el ancho) -->
                    <div class="seccion-modal" id="resultadosCarga" style="display: none;">
                        <div class="seccion-header">
                            <span class="seccion-titulo">📊 Resultados del Procesamiento</span>
                        </div>
                        <div class="seccion-datos">
                            <!-- Resumen -->
                            <div id="resumenCarga" class="mb-4">
                                <div class="row text-center">
                                    <div class="col-md-4">
                                        <div class="card bg-light">
                                            <div class="card-body py-3">
                                                <h4 id="totalRegistros" class="text-primary mb-0">0</h4>
                                                <small class="text-muted">Total Registros</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card bg-light">
                                            <div class="card-body py-3">
                                                <h4 id="registrosExitosos" class="text-success mb-0">0</h4>
                                                <small class="text-muted">Éxitos</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card bg-light">
                                            <div class="card-body py-3">
                                                <h4 id="registrosFallidos" class="text-danger mb-0">0</h4>
                                                <small class="text-muted">Fallidos</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Mensaje principal -->
                            <div id="mensajeResultado" class="alert mb-3"></div>

                            <!-- Errores detallados -->
                            <div id="panelErrores" style="display: none;">
                                <h6 class="text-danger mb-3">
                                    <i class="bi bi-exclamation-triangle"></i> Errores encontrados:
                                </h6>
                                <div class="table-wrapper" style="max-height: 300px; overflow-y: auto;">
                                    <table class="table table-sm table-striped">
                                        <thead class="sticky-top bg-light">
                                            <tr>
                                                <th width="80">Fila</th>
                                                <th>Marca</th>
                                                <th>Modelo</th>
                                                <th>Serial</th>
                                                <th>Error</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbodyErrores"></tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Éxitos -->
                            <div id="panelExitosos" style="display: none;" class="mt-4">
                                <h6 class="text-success mb-3">
                                    <i class="bi bi-check-circle"></i> Registros procesados exitosamente
                                </h6>
                                <div class="alert alert-success">
                                    <i class="bi bi-info-circle"></i> Los equipos han sido registrados correctamente en el sistema.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer-equipgo">
                    <button class="boton-modal-equipgo boton-modal-secundario" data-bs-dismiss="modal" onclick="limpiarModalCarga()">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button class="boton-modal-equipgo" id="procesarCargaBtn" disabled>
                        <i class="bi bi-upload"></i> Procesar Carga Masiva
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Crear Equipo -->
    <div class="modal fade modal-equipgo" id="modalCrearEquipo" tabindex="-1" aria-labelledby="modalCrearEquipoLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header-equipgo">
                    <h5 class="modal-title-equipgo">Registrar Equipo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body-equipgo">
                    <form id="formCrearEquipo">
                        <div class="seccion-modal">
                            <div class="seccion-header">
                                <span class="seccion-titulo">💻 Datos del Equipo</span>
                            </div>
                            <div class="seccion-datos">
                                <div class="form-section">
                                    <label>Marca</label>
                                    <input type="text" id="marca" name="marca" required placeholder="Ej: Dell" />
                                </div>
                                <div class="form-section">
                                    <label>Modelo</label>
                                    <input type="text" id="modelo" name="modelo" required placeholder="Ej: Latitude 5510" />
                                </div>
                                <div class="form-section">
                                    <label>Serial</label>
                                    <input type="text" id="serial" name="serial" placeholder="Ej: ABC123" />
                                </div>
                                <div class="form-section">
                                    <label>Código de Barras</label>
                                    <input type="text" id="codigoBarras" name="codigoBarras" placeholder="Ej: CB001" />
                                </div>
                                <div class="form-section">
                                    <label>Sistema Operativo</label>
                                    <input type="text" id="sistemaOperativo" name="sistemaOperativo" placeholder="Ej: Windows 11" />
                                </div>
                                <div class="form-section">
                                    <label>MAC Equipo</label>
                                    <input type="text" id="macEquipo" name="macEquipo" placeholder="Ej: 00:1B:44:11:3A:B7" />
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-section">
                                            <label>Latitud</label>
                                            <input readonly type="number" step="any" id="latitud" name="latitud" placeholder="0.000000" style="background-color: gainsboro;" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-section">
                                            <label>Longitud</label>
                                            <input readonly type="number" step="any" id="longitud" name="longitud" placeholder="0.000000" style="background-color: gainsboro;" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer-equipgo">
                    <button class="boton-modal-equipgo boton-modal-secundario" data-bs-dismiss="modal">Cancelar</button>
                    <button class="boton-modal-equipgo" onclick="guardarEquipo()">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Asignar Usuario-->
    <div class="modal fade modal-equipgo" id="modalAsignarUsuario" tabindex="-1" aria-labelledby="modalAsignarUsuarioLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header-equipgo">
                    <h5 class="modal-title-equipgo">
                        <span id="tituloAsignacion">Asignar Usuario</span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body-equipgo">
                    <form id="formAsignarUsuario">
                        <input type="hidden" id="asignarEquipoId" />

                        <!-- Estado Actual de Asignación -->
                        <div class="seccion-modal">
                            <div class="seccion-header">
                                <span class="seccion-titulo">📋 Estado Actual</span>
                            </div>
                            <div class="seccion-datos">
                                <div id="estadoActualAsignacion" class="alert alert-info">
                                    <!-- Aquí se mostrará si hay usuario asignado o no -->
                                </div>
                            </div>
                        </div>

                        <!-- Selección de Usuario -->
                        <div class="seccion-modal">
                            <div class="seccion-header">
                                <span class="seccion-titulo">👤 Seleccionar Usuario</span>
                            </div>
                            <div class="seccion-datos">
                                <div class="form-section">
                                    <label>Usuario</label>
                                    <select id="asignarUsuarioSelect">
                                        <option value="">Buscar usuario</option>
                                    </select>
                                    <small class="text-muted">Selecciona un usuario del Active Directory o base local</small>
                                </div>
                            </div>
                        </div>

                        <!-- Formulario de Información del Usuario (SIEMPRE VISIBLE cuando hay selección) -->
                        <div class="seccion-modal" id="seccionFormularioUsuario" style="display: none;">
                            <div class="seccion-header">
                                <span class="seccion-titulo" id="tituloFormularioUsuario">📝 Información del Usuario</span>
                            </div>
                            <div class="seccion-datos">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-section">
                                            <label>Tipo de Documento <span class="text-danger">*</span></label>
                                            <select id="asignarTipoDocumento" required>
                                                <option value="">Seleccionar...</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-section">
                                            <label>Número de Documento <span class="text-danger">*</span></label>
                                            <input type="text" id="asignarNumeroDocumento" required placeholder="Ej: 1234567890" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-section">
                                            <label>Nombres <span class="text-danger">*</span></label>
                                            <input type="text" id="asignarNombres" required placeholder="Ej: Juan" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-section">
                                            <label>Apellidos <span class="text-danger">*</span></label>
                                            <input type="text" id="asignarApellidos" required placeholder="Ej: Pérez" class="form-control" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-section">
                                            <label>Área <span class="text-danger">*</span></label>
                                            <select id="asignarArea" required>
                                                <option value="">Seleccionar...</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-section">
                                            <label>Campaña <span class="text-danger">*</span></label>
                                            <select id="asignarCampana" required>
                                                <option value="">Seleccionar...</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <!-- Indicador de origen del usuario -->
                                <div id="indicadorOrigenUsuario" class="alert alert-light mt-3" style="display: none;">
                                    <small>
                                        <i class="bi bi-info-circle"></i>
                                        <span id="textoOrigenUsuario">Usuario cargado desde Active Directory</span>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer-equipgo">
                    <!-- Botón de Desasignar (solo visible si hay usuario asignado) -->
                    <button class="boton-modal-equipgo boton-modal-peligro" id="btnDesasignar" style="display: none; margin-right: auto;" onclick="desasignarUsuario()">
                        🗑️ Desasignar
                    </button>

                    <button class="boton-modal-equipgo boton-modal-secundario" data-bs-dismiss="modal">Cancelar</button>
                    <button class="boton-modal-equipgo" onclick="guardarAsignacionUsuario()" id="btnGuardarAsignacion">
                        💾 Guardar Asignación
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Editar Equipo  -->
    <div class="modal fade modal-equipgo" id="modalEditarEquipo" tabindex="-1" aria-labelledby="modalEditarEquipoLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <!-- Cambiado a modal-lg para mejor legibilidad en una columna -->
            <div class="modal-content">
                <div class="modal-header-equipgo">
                    <h5 class="modal-title-equipgo">Editar Equipo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body-equipgo">
                    <form id="formEditarEquipo">
                        <input type="hidden" id="editarId" />

                        <!-- Sección 1: Información básica del equipo -->
                        <div class="seccion-modal">
                            <div class="seccion-header">
                                <span class="seccion-titulo">💻 Datos del Equipo</span>
                            </div>
                            <div class="seccion-datos">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-section">
                                            <label>Marca</label>
                                            <input readonly type="text" id="editarMarca" style="background-color: gainsboro;" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-section">
                                            <label>Modelo</label>
                                            <input readonly type="text" id="editarModelo" style="background-color: gainsboro;" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-section">
                                            <label>Serial</label>
                                            <input readonly type="text" id="editarSerial" style="background-color: gainsboro;" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-section">
