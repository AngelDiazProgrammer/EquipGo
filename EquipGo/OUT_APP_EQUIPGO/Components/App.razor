@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    @* <link href="css/Dashboard/dashboard.css" rel="stylesheet" /> *@
    <link href="css/Main/Main.css" rel="stylesheet" />
    <link href="css/Scanner/Scanner.css" rel="stylesheet" />
    <link href="css/Modales/Modales.css" rel="stylesheet" />
    <link href="css/Tablas/Tablas.css" rel="stylesheet" />
    <!-- <link href="css/Auth/login.css" rel="stylesheet" />-->
    <link rel="stylesheet" href="OUT_APP_EQUIPGO.styles.css" />
    <!-- Favicon para modo claro -->
    <link rel="icon" href="/icono-dark.png" media="(prefers-color-scheme: light)">
    <!-- Favicon para modo oscuro -->
    <link rel="icon" href="/icono-white.png" media="(prefers-color-scheme: dark)">
    <!-- Fallback para navegadores que no soportan media queries -->
    <link rel="icon" href="~/favicon-light.png">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="" />
    <!-- CSS y JS de Tom Select -->
    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/css/tom-select.css" rel="stylesheet" />

    <HeadContent>
        <script>
            console.log("✅ Head cargado correctamente");
        </script>
    </HeadContent>

    <HeadOutlet />
</head>
<body class="background-principal" style=" background-color: #F1F1F1;">
    <Routes @rendermode="RenderMode.InteractiveServer" />

    @code {
        protected override async Task OnInitializedAsync()
        {
            var authState = await AuthProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity.IsAuthenticated && !Navigation.Uri.Contains("/login"))
            {
                Navigation.NavigateTo("/login", forceLoad: true);
            }
        }
    }

    <script src="_framework/blazor.web.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/quagga/0.12.1/quagga.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/js/tom-select.complete.min.js"></script>
    <script>
        window.googleMapsApiKey = "@Configuration["GoogleMaps:ApiKey"]";
        console.log('🔑 API Key cargada:', window.googleMapsApiKey ? 'SÍ' : 'NO');
    </script>
    <script src="js/Maps/mapa.js"></script>
    <script src="js/Maps/leaflet-map.js"></script>
    <script src="js/auth/Auth.js"></script>
    <script src="js/SignalR/dashboard.js"></script>
    <script src="js/scanner.js"></script>
    <script src="js/Equipos/Equipos.js"></script>
    <script src="js/Usuarios/UsuariosInformacion.js"></script>
    <script src="js/Areas/Areas.js""></script>
    <script src="js/SubEstados/SubEstados.js"></script>
    <script src="js/Visitantes/visitante.js"></script>
</body>
</html>
